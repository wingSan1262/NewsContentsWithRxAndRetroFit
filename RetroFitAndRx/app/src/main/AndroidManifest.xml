<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vanrrtech.app.retrofitandrx">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/new_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.RetroFitAndRx">
        <activity android:name=".views.WelcomeActivity"></activity>
        <activity android:name=".views.MainActivity" />
        <activity android:name=".views.SplashScreen" />
        <activity android:name=".views.WebViewActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>