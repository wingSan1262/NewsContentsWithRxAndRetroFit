<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:layout_height="match_parent"
    tools:context=".views.ReadNewsWelcomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:scaleType="fitCenter"
            android:padding="50dp"
            android:layout_width="match_parent"
            android:src="@drawable/pass"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:scrollHorizontally="true"
                    android:id="@+id/token_field"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:singleLine="true"
                    android:hint="ENTER TOKEN HERE"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:gravity="top"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:src="@drawable/read_news"
            android:textSize="16sp"
            android:text="\n Please enter your News API token to continue. You can get it on News Api Web by registering."
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/open_news_api"
            android:textColor="#4e469c"
            android:gravity="top"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:src="@drawable/read_news"
            android:textSize="16sp"
            android:text="\n Click here to obtain you key"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <TextView
            android:gravity="top"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:src="@drawable/read_news"
            android:textSize="16sp"
            android:text="\n Or"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/use_default_api_key"
            android:textColor="#4e469c"
            android:gravity="top"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:src="@drawable/read_news"
            android:textSize="16sp"
            android:text="\n Use Default Key\n"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
</LinearLayout>